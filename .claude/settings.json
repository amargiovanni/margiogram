{
  "$schema": "https://claude.ai/schemas/claude-code-settings.json",
  "project": {
    "name": "Margiogram",
    "description": "Native Telegram client for iOS 26+/macOS 26+ with Liquid Glass design",
    "type": "ios-macos-app",
    "language": "swift",
    "framework": "swiftui",
    "swiftVersion": "6.0",
    "minimumPlatforms": {
      "iOS": "26.0",
      "macOS": "26.0"
    }
  },
  "model": {
    "default": "claude-sonnet-4-5-20250929",
    "planning": "claude-sonnet-4-5-20250929",
    "implementation": "claude-sonnet-4-5-20250929",
    "review": "claude-sonnet-4-5-20250929",
    "complex": "claude-opus-4-5-20251101",
    "notes": "Use Opus for complex architectural decisions, security audits, and major refactoring. Use Sonnet for most coding tasks."
  },
  "preferences": {
    "codeStyle": {
      "indentation": "spaces",
      "indentSize": 4,
      "lineWidth": 120,
      "trailingComma": false,
      "bracketStyle": "same-line"
    },
    "naming": {
      "classes": "PascalCase",
      "structs": "PascalCase",
      "enums": "PascalCase",
      "protocols": "PascalCase",
      "functions": "camelCase",
      "variables": "camelCase",
      "constants": "camelCase",
      "typeAliases": "PascalCase"
    },
    "documentation": {
      "style": "swift-doc-comments",
      "requirePublicDocs": true,
      "includeExamples": true
    },
    "testing": {
      "framework": "Swift Testing",
      "legacyFramework": "XCTest",
      "coverageThreshold": 80,
      "namingConvention": "test_methodName_condition_expectedResult"
    },
    "concurrency": {
      "model": "Swift 6 strict concurrency",
      "preferActors": true,
      "useAsyncAwait": true,
      "avoidGCD": true
    }
  },
  "rules": {
    "security": [
      "Never hardcode API keys or secrets",
      "Always use Keychain for sensitive data",
      "Validate all user inputs",
      "Use secure connections only (HTTPS)",
      "Implement certificate pinning for TDLib",
      "Never log PII or sensitive data"
    ],
    "performance": [
      "Use LazyVStack for long lists",
      "Implement image caching",
      "Avoid blocking main thread",
      "Use background queues for heavy operations",
      "Implement proper memory management",
      "Leverage iOS 26 performance APIs"
    ],
    "codeQuality": [
      "No force unwrapping (!) except @IBOutlet",
      "Handle all error cases explicitly",
      "Use async/await instead of callbacks",
      "Follow SOLID principles",
      "Keep functions under 50 lines",
      "Keep files under 400 lines",
      "Extract reusable components",
      "Use Swift 6 strict concurrency"
    ],
    "ui": [
      "Support Dark Mode",
      "Support Dynamic Type",
      "Add accessibility labels",
      "Use semantic colors",
      "Follow Human Interface Guidelines iOS 26",
      "Implement Liquid Glass design system",
      "Support all screen sizes adaptively"
    ]
  },
  "ignorePatterns": [
    "*.xcodeproj/*",
    "*.xcworkspace/*",
    "DerivedData/*",
    "build/*",
    "Pods/*",
    ".build/*",
    "*.generated.swift"
  ],
  "contextFiles": [
    "CLAUDE.md",
    "AGENTS.md",
    "IMPLEMENTATION.md",
    "README.md"
  ],
  "tools": {
    "linter": "swiftlint",
    "formatter": "swiftformat",
    "packageManager": "spm",
    "xcode": "17.0+"
  }
}
